<Window x:Class="DiplomDimaDen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomDimaDen"
        mc:Ignorable="d"
        Title="Авторизация" Height="250" Width="400" Icon="/Icon/Iconca.png">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="tb_log" Width="200" Height="25"/>
            <TextBlock Text="Пароль" FontSize="20" HorizontalAlignment="Center"/>
            <TextBox Name="tb_pas" Width="200" Height="25"/>
            <Button Name="Btn_Vhod"  Click="Btn_Vhod_Click" Content="Войти" Width="200" Height="25" FontSize="15" Margin="10,15,10,10" Background="#FFC8F9A7"/>
            <Label HorizontalAlignment="Center">
                <Hyperlink Name="HLreg" FontSize="13" Click="HLreg_Click">
                    Восстановить  пароль
                </Hyperlink>
            </Label>
        </StackPanel>  
    </Grid>
</Window>
