<Window x:Class="DiplomDimaDen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiplomDimaDen"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Логин" HorizontalAlignment="Center"/>
            <TextBox Name="tb_log" Width="100"/>
            <TextBlock Text="Пароль" HorizontalAlignment="Center"/>
            <TextBox Name="tb_pas" Width="100"/>
            <Button Name="Btn_Vhod" Click="Btn_Vhod_Click" Content="Войти" Width="100" Margin="6"/>
            <Label>
                <Hyperlink Name="HLreg" Click="HLreg_Click">
                    Восстановить  пароль
                </Hyperlink>
            </Label>
        </StackPanel>  
    </Grid>
</Window>
